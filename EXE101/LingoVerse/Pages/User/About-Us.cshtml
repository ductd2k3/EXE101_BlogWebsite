<style>
    .about-container {
        margin: 40px auto;
        max-width: 1200px;
        display: flex;
        gap: 20px;
    }

    .sidebar {
        width: 25%;
        background: #1b263b;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 20px rgba(119, 141, 169, 0.5);
    }

        .sidebar button {
            width: 100%;
            background: #415a77;
            border: none;
            color: #e0e1dd;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 10px;
            text-align: left;
            font-size: 1.1rem;
            transition: all 0.3s;
        }

            .sidebar button:hover, .sidebar button.active {
                background: #00b4d8;
                color: #fff;
                box-shadow: 0 0 10px rgba(0, 180, 216, 0.5);
            }

    .content {
        width: 75%;
        background: #1b263b;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 20px rgba(119, 141, 169, 0.5);
    }

    .content-section {
        display: none;
    }

        .content-section.active {
            display: block;
        }

        .content-section h2 {
            color: #00b4d8;
            font-weight: bold;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .content-section p, .content-section li {
            margin: 10px 0;
            font-size: 1.1rem;
            color: #e0e1dd;
        }

        .content-section ul {
            list-style-type: none;
            padding-left: 0;
        }

            .content-section ul li {
                position: relative;
                padding-left: 20px;
            }

                .content-section ul li:before {
                    content: "\f058";
                    font-family: "Font Awesome 6 Free";
                    font-weight: 900;
                    color: #00b4d8;
                    position: absolute;
                    left: 0;
                }

    .contact-form {
        background: rgba(65, 90, 119, 0.2);
        padding: 20px;
        border-radius: 10px;
    }

        .contact-form input, .contact-form textarea {
            background: #415a77;
            border: none;
            color: #e0e1dd;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 15px;
            width: 100%;
        }

        .contact-form button {
            background: #28a745;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            color: #fff;
            font-weight: bold;
            transition: background 0.3s, transform 0.3s;
        }

            .contact-form button:hover {
                background: #218838;
                transform: scale(1.05);
